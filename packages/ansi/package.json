{
  "name": "@consify/ansi",
  "private": "false",
  "publishConfig": {
    "access": "public"
  },
  "type":"module",
  "version": "1.0.0",
  "main": "./lib/esm/index.js",
  "types": "./lib/esm/types/index.d.ts",
  "scripts": {
    
    "clean": "if exist lib rmdir /s /q lib",
    "clean:tests": "if exist \"lib\\esm\\tests\" rmdir /s /q \"lib\\esm\\tests\"",
    
    "build:esm:tests": "tsc -p ./tsconfigs/esm/tsconfig.tests.json",
    "build:cjs:tests": "tsc -p ./tsconfigs/cjs/tsconfig.tests.json",
    
    "build:esm": "tsc -p ./tsconfigs/esm/tsconfig.lib.json",
    "build:cjs": "tsc -p ./tsconfigs/cjs/tsconfig.lib.json && rename \"lib\\cjs\\index.js\" index.cjs",
    
    "build:tests": "npm run build:esm:tests",

    "test:esm": "npx mocha --config mocharcs/.mocharc.esm.json",
    "test": "npm run build:esm:tests && npm run test:esm && npm run clean:tests",
  
    "build": "npm run clean && npm run build:esm && npm run build:cjs && npm run test",

    "prepack": "npm run build"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./lib/esm/types/index.d.ts",
        "default": "./lib/esm/index.js"
      },
      "require": {
        "types": "./lib/cjs/types/index.d.ts",
        "default": "./lib/cjs/index.cjs"
      }
    }
  },
  "files": [
    "lib/**/*"
  ],
  "keywords": [
    "ansi",
    "ansi-colors",
    "ansi-codes",
    "console",
    "console-utils",
    "terminal",
    "cli",
    "text-formatting",
    "colors",
    "styling",
    "escape-codes",
    "command-line",
    "logging",
    "tty",
    "stdout",
    "chalk",
    "ink",
    "nodejs"
  ],
  "author": "@byimaan/SubhPB",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@types/chai": "^5.0.1",
    "@types/mocha": "^10.0.10",
    "chai": "^5.1.2",
    "mocha": "^11.1.0",
    "ts-node": "^10.9.2"
  }
}
