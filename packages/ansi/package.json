{
  "name": "@consify/ansi",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "version": "1.0.1",
  "main": "./lib/cjs/index.cjs",
  "types": "./lib/cjs/types/index.d.cts",
  "scripts": {
    
    "clean": "if exist lib rmdir /s /q lib",
    "clean:tests": "if exist \"lib\\esm\\tests\" rmdir /s /q \"lib\\esm\\tests\"",
    
    "build:esm:tests": "tsc -p ./tsconfigs/esm/tsconfig.tests.json",
    "build:cjs:tests": "tsc -p ./tsconfigs/cjs/tsconfig.tests.json",

    "build:esm:ext:rename": "rename \"lib\\esm\\index.js\" index.mjs && rename \"lib\\esm\\types\\index.d.ts\" index.d.mts",
    "build:cjs:ext:rename": "rename \"lib\\cjs\\index.js\" index.cjs && rename \"lib\\cjs\\types\\index.d.ts\" index.d.cts",
    
    "build:esm": "tsc -p ./tsconfigs/esm/tsconfig.lib.json && npm run build:esm:ext:rename",
    "build:cjs": "tsc -p ./tsconfigs/cjs/tsconfig.lib.json && npm run build:cjs:ext:rename",
    
    "build:tests": "npm run build:esm:tests",

    "test:esm": "npx mocha",
    "test": "npm run build:esm:tests && npm run test:esm && npm run clean:tests",
  
    "build": "npm run clean && npm run test && npm run build:esm && npm run build:cjs",

    "prepack": "npm run build"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./lib/esm/types/index.d.mts",
        "default": "./lib/esm/index.mjs"
      },
      "require": {
        "types": "./lib/cjs/types/index.d.cts",
        "default": "./lib/cjs/index.cjs"
      }
    }
  },
  "files": [
    "lib/**/*"
  ],
  "keywords": [
    "ansi",
    "ansi-colors",
    "ansi-codes",
    "console",
    "console-utils",
    "terminal",
    "cli",
    "text-formatting",
    "colors",
    "styling",
    "escape-codes",
    "command-line",
    "logging",
    "tty",
    "stdout",
    "chalk",
    "ink",
    "nodejs"
  ],
  "author": "@Byimaan/SubhPB",
  "license": "ISC",
  "repository":"https://github.com/SubhPB/consify/tree/main/packages/ansi",
  "description": "@consify/ansi â€” a zero-dependency toolkit for styling terminal text with colors, backgrounds, and effects. Perfect for developers who want simple, readable, and expressive CLI output.",
  "devDependencies": {
    "@types/chai": "^5.0.1",
    "@types/mocha": "^10.0.10",
    "chai": "^5.1.2",
    "mocha": "^11.1.0",
    "ts-node": "^10.9.2"
  }
}
